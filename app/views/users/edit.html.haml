#account-page.account-page
	.account-page__inner.clearfix
		.account-page__inner--left.account-page__header
			%h2 Update Account
			%h5 アカウントの編集
		.account-page__inner--right.user-form
			= form_for(resource, as: resource_name, url: edit_user_path(resource_name)) do |f|
				.field
					.field-label
						= f.label :name
					.field-input
						= f.text_field :name, value = @user.name, autofocus: true
				.field
					.field-label
						= f.label :email
					.field-input
						= f.email_field :email, value = @user.email
				.actions
					= f.submit "Update Account", class: 'btn'
